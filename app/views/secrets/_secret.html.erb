<div id="<%= dom_id secret %>" class="secret bg-white rounded-lg shadow-md p-6">
  <h3 class="text-xl font-semibold text-gray-800 mb-2">
    <%= secret.title %>
  </h3>
  <% if user_signed_in? && secret.user != nil %>
    <p class="secret-username text-gray-600 mb-2">
      Posted by, <%= secret.user.username %>
    </p>
  <% else %>
    <p class="secret-username text-gray-600 mb-2">****</p>
  <% end %>
  <p class="text-gray-500 mb-4">
    <%= secret.created_at.strftime("%b %d, %Y, %l:%M %p") %>
  </p>
  <p class="text-gray-700">
    <%= secret.body %>
  </p>
</div>