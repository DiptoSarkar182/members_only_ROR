<h2 class="text-2xl font-bold text-gray-800 text-center mb-8">All the secrets</h2>

<div class="flex justify-center">
  <div class="w-full max-w-md space-y-6" id="secret-display" data-user-signed-in="<%= user_signed_in? %>">
    <% @secrets.each do |secret| %>
      <%= render secret %>
    <% end %>
  </div>
</div>