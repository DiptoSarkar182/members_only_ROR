<div class="flex items-center justify-center min-h-screen bg-gray-100">
  <div class="w-full max-w-md bg-white rounded-lg shadow-md p-8">
    <h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">Sign up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'space-y-4') do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div>
        <%= f.label :username, class: 'block text-gray-700 font-semibold' %><br />
        <%= f.text_field :username, autofocus: true, autocomplete: "username", class: 'w-full rounded-md border-gray-300 focus:border-indigo-500 focus:ring focus:ring-indigo-200' %>
      </div>

      <div>
        <%= f.label :email, class: 'block text-gray-700 font-semibold' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full rounded-md border-gray-300 focus:border-indigo-500 focus:ring focus:ring-indigo-200' %>
      </div>

      <div>
        <%= f.label :password, class: 'block text-gray-700 font-semibold' %>
        <% if @minimum_password_length %>
          <span class="text-gray-500"><em>(<%= @minimum_password_length %> characters minimum)</em></span>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: 'w-full rounded-md border-gray-300 focus:border-indigo-500 focus:ring focus:ring-indigo-200' %>
      </div>

      <div class="mb-6">
        <%= f.label :password_confirmation, class: 'block text-gray-700 font-semibold' %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'w-full rounded-md border-gray-300 focus:border-indigo-500 focus:ring focus:ring-indigo-200' %>
      </div>

      <div>
        <%= f.submit "Sign up", class: 'w-full py-2 px-4 rounded-md bg-indigo-600 text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 cursor-pointer' %>
      </div>
    <% end %>

    <div class="mt-6 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>