<div class="flex items-center justify-center min-h-screen bg-gray-100">
  <div class="w-full max-w-md bg-white rounded-lg shadow-md p-8">
    <h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">Log in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'space-y-4') do |f| %>
      <div>
        <%= f.label :email, class: 'block text-gray-700 font-semibold' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full rounded-md border-gray-300 focus:border-indigo-500 focus:ring focus:ring-indigo-200' %>
      </div>

      <div>
        <%= f.label :password, class: 'block text-gray-700 font-semibold' %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: 'w-full rounded-md border-gray-300 focus:border-indigo-500 focus:ring focus:ring-indigo-200' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: 'rounded-md border-gray-300 focus:border-indigo-500 focus:ring focus:ring-indigo-200 cursor-pointer' %>
          <%= f.label :remember_me, class: 'text-gray-700 ml-2' %>
        </div>
      <% end %>

      <div>
        <%= f.submit "Log in", class: 'w-full py-2 px-4 rounded-md bg-indigo-600 text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 cursor-pointer' %>
      </div>
    <% end %>

    <div class="mt-6 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>